  <% else %>
    | <%= link_to t('my_account'), user_path(current_user) if current_user%>
  <% end %>
  <br/><br/>

  <%= render :partial => 'shared/order_details', :locals => {:order => @order} -%>

  <br/>
 <div><%= link_to t('back_to_store'), products_path,:style=>"float:left;" %> <span style="vertical-align:middle;"><%= link_to image_tag("printer.png")+t("print_order"), '#',:onclick=>'window.print();',:style=>"float:right;margin:0 5px 5px;" %></span></div>
