<div id="order">
  <%= link_to t('back_to_store'), products_path,:class=>"no_print" %>

  <% if params.has_key? :checkout_complete %>
    <br/><br/>
    <h3 class="no_print"><%= t('thank_you_for_your_order') %></h3>
  <% else %>
    <span class="no_print">|</span> <%= link_to t('my_account'), user_path(current_user),:class=>"no_print" if current_user %>
  <% end %>
  <br/><br/>

  <%= render :partial => 'shared/order_details', :locals => {:order => @order} -%>

  <br/>
 <div><%= link_to t('back_to_store'), products_path,:style=>"float:left;",:class=>"no_print" %> <span style="vertical-align:middle;"><%= link_to image_tag("printer.png")+t("print_order"), '#',:onclick=>'window.print();',:style=>"float:right;margin:0 5px 5px;",:class=>"no_print" %></span></div>
</div>
