<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<% hook :inside_head do %>
  <%= render :partial => 'shared/head'%>
<% end %>
</head>
<%
if @body_class.nil?
  if @content_for_sidebar
    @body_class = 'two-col'
  else
    @body_class = 'one-col'
  end
end
 %>
<body class="<%= @body_class %>"<%= %( id="#{@body_id}") if @body_id %>>
  <div id="header" class="container">
    <div id="logo"><%= logo %></div>
    <%= render 'shared/top_menu' %>

  </div>
  <div class="clear"></div>
<div id="login-bar"><% if current_user -%>
  <span><%= link_to t('my_account'), user_path(current_user) %></span><%= image_tag "dot01.gif" %>
  <span><%= link_to t('logout'), logout_path %></span>
<% else %>
<span><%= link_to t('log_in'), login_path %><%= image_tag "dot01.gif" %></span>
<span><%= link_to t('signup'), signup_path %></span>
<% end -%></div>
<div class="clear"></div>

    <div id="wrapper" class="container">
      <% if @content_for_sidebar %>
    <div id="sidebar">
      <% hook :sidebar do %>
        <%= yield :sidebar %>
      <% end %>
    </div>
    <% end %>


    <%= yield %>

  </div>
<div class="clear"></div>
 <%= render :partial => 'shared/footer'%>
</body>
</html>
